{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.mjs",
    "db:push": "pnpm --filter @tepirek-revamped/db run db:push"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@tepirek-revamped/api": "workspace:*",
    "@tepirek-revamped/auth": "workspace:*",
    "@tepirek-revamped/db": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tepirek-revamped/config": "workspace:*",
    "@types/bun": "^1.3.9",
    "tsdown": "^0.16.8",
    "typescript": "catalog:"
  }
}
